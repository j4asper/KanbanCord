{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Exceptions"
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/kanbancord.log",
          "fileSizeLimitBytes": 5000000,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [
      "WithExceptionDetails"
    ]
  }
}
